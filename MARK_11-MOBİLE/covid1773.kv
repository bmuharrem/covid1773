<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"COVID-1773"
            font_size: (root.width**2 + root.height**2) / 12**4
            pos_hint: {"x":0.3, "top":1.02}
            size_hint: 0.4, 0.15

        Label:
            text:"Email"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.3, "top":0.85}
            size_hint: 0.4, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.1 , "top":0.75}
            size_hint: 0.8, 0.08

        Label:
            text:"Password"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.3, "top":0.65}
            size_hint: 0.4, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.55}
            size_hint: 0.4, 0.08

        Button:
            pos_hint:{"x":0.4,"y":0.05}
            size_hint: 0.2, 0.08
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>               

    FloatLayout:
        cols:1
        halign: "center"
        valign: "middle"

        # FİRST COLOUM

        FloatLayout:
            size: root.width, root.height

            Button:
                text: "COVID 1773"
                size_hint: (root.uch*8)/9, root.leng
                background_normal: ''
                background_color: 97/255, 137/255, 47/255, 1
                pos_hint: {"x": root.space, "top":1 - root.space}


            Button:
                text: "USER"
                size_hint: (root.uch*8)/9, root.leng
                pos_hint: {"x": 1 - (root.uch*8)/9 - root.space, "top":1 - root.space}  
                id: btn
                on_release: dropdown.open(self)
                
                    


            DropDown:

                id: dropdown
                # on_select: btn.text = '{}'.format(args[1])  

                Button:
                    text: "USER İNFORMATİON"
                    size_hint_y:None 
                    height: '50dp'
                    # on_release: dropdown.select("user information")
                        

                Button:
                    text: "SETTİNGS"
                    size_hint_y: None
                    height: '50dp'
                    # on_release: dropdown.select("user information")   

                Button:
                    text: "LOG OUT"
                    size_hint_y: None
                    height: '50dp'
                    on_release:
                        root.switch_to("login")



        # SECOND COLOUM

        FloatLayout:
            cols: 1

            Button:
                text: "PERSONAL STATISTICS"    
                size_hint: 1 - 2*root.space, root.leng*3.5
                pos_hint: {"x": root.space, "top":1 - root.leng - 2*root.space } 




        # THIRD COLOUM

        FloatLayout:
            cols: 1
            Label:
                text: "NAVBAR"
                size_hint: 1 - 2*root.space, root.leng*0.5
                pos_hint: {"x": root.space, "top": root.leng*4 + 3*root.space}
                    
        # FOURTH COLOUM
        
        FloatLayout:
            cols: 2
            

            Button:
                text: "            HEALTH\n MINISTRY STATISTICS"
                size_hint: root.uch, root.leng*1.25
                pos_hint: {"x": root.space, "top": root.leng*3.5 + 2*root.space }    
                on_release:
                    root.switch_to("health")
                    
                        
            Button:
                text: "RISKY CONDITIONS"
                size_hint: root.uch, root.leng*1.25
                pos_hint: {"x": 1 - root.uch - root.space, "top": root.leng*3.5 + 2*root.space }
                on_release:
                    root.switch_to("risk")
                    
                    
            Button:
                text: "NEWS"
                size_hint: root.uch, root.leng*1.25
                pos_hint: {"x": root.space, "top": root.leng*2.25 + root.space }
                on_release:
                    root.switch_to("news")
                    

            Button:
                text: "SUGGESTIONS"
                size_hint: root.uch, root.leng*1.25
                pos_hint: {"x": 1 - root.uch - root.space, "top": root.leng*2.25 + root.space }        
                on_release:
                    root.switch_to("suggestions")


        # FIFTH COLOUM

        FloatLayout:
            cols: 2

            Button:
                text: "CONTACT US"
                size_hint: (root.uch*7)/9, root.leng*.75
                background_normal: ''
                background_color: 107/255, 110/255, 112/255, 1
                pos_hint: {"x":1 - (root.uch*7)/9 - root.space , "top": root.leng } 

            Button:
                text: "ABOUT US"   
                size_hint: (root.uch*7)/9, root.leng*.75
                background_normal: ''
                background_color: 107/255, 110/255, 112/255, 1
                pos_hint: {"x": root.space, "top": root.leng}  

