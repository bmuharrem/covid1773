<Button@Button>:
    background_normal: ''
    background_color: 134/255, 194/255, 50/255, 1

    # RENGİ TAM AYIRMADI UYGULANICAKSA BAŞKA BİR RENK SEÇİLMELİ

    canvas:
        Color:     
            rgb: 71/255, 75/255, 79/255
        Line:
            width: 1.5
            rectangle: self.x, self.y, self.width, self.height

<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2
            Label:
                text: "COVID-1773"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1.05}
                font_size: (root.width**2 + root.height**2) / 12**4

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":0.95}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.25, "top":0.85}
                text: "Name"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                size_hint: 0.8, 0.06
                pos_hint: {"x":0.1, "top":0.75}
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.25, "top":0.7}
                text: "Email"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.1, "top":0.6}
                size_hint: 0.8, 0.06
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.25, "top":0.55}
                text: "Password"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.1, "top":0.45}
                size_hint: 0.8, 0.06
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.4,"y":0.05}
            size_hint: 0.2, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
                
